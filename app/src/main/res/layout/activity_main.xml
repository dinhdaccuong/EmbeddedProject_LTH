<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="517dp"
        android:layout_weight="2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">


        <Button
            android:id="@+id/button_measure"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="#DFA"
            android:text="Measure" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:background="#FFB"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/button_measure" />

        <Button
            android:id="@+id/button_relay1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/button_measure"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="#DFA"
            android:text="relay 1" />

        <Button
            android:id="@+id/button_relay2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/button_relay1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="#DFA"
            android:text="relay 2" />
        <!--            android:layout_marginTop="9dp"-->
    </RelativeLayout>

</LinearLayout>